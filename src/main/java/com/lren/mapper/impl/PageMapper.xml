<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lren.mapper.PageMapper">

    <!--1.查询所有用户信息，按用户ID进行排序-->
    <!--注意：order by 后面是关键字，一般不能加上“;”否则报SQL错误-->
    <select id="selectUsers" resultType="users">
        select *
        from user
        where 1 = 1
        order by id
    </select>

</mapper>